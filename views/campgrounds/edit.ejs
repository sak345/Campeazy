<%- layout('layouts/boilerplate') %>

<div class="row mb-3 rounded">
  <div class="col-6 offset-3 bg-dark rounded px-5 text-white">
    <h1 class="text-center my-3">Edit Campground</h1>
    <form
      action="/campgrounds/<%= camp._id %>?_method=PUT"
      method="post"
      class="needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Title</label>
        <input
          type="text"
          class="form-control"
          id="exampleFormControlInput1"
          name="campground[title]"
          placeholder="Name of Campground"
          value="<%= camp.title %>"
          required
        />
        <div class="invalid-feedback">Please provide a valid name</div>
      </div>
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label"
          >Location</label
        >
        <input
          type="text"
          class="form-control"
          id="exampleFormControlInput1"
          name="campground[location]"
          placeholder="Location of Campground"
          value="<%= camp.location %>"
          required
        />
        <div class="invalid-feedback">Please provide a valid location</div>
      </div>
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label"
          >Image URL</label
        >
        <input
          type="url"
          class="form-control"
          id="exampleFormControlInput1"
          name="campground[img]"
          placeholder="Image of Campground"
          value="<%= camp.img %>"
          required
        />
        <div class="invalid-feedback">Please provide a valid URL</div>
      </div>
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Price</label>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input
            type="text"
            class="form-control"
            aria-label="Amount (to the nearest dollar)"
            placeholder="Price of Campground"
            name="campground[price]"
            value="<%= camp.price %>"
            required
          />
          <span class="input-group-text">.00</span>
          <div class="invalid-feedback">Please provide a valid price</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label"
          >Description</label
        >
        <textarea
          class="form-control"
          id="exampleFormControlTextarea1"
          name="campground[description]"
          rows="3"
          required
        >
<%= camp.description %>
      </textarea
        >
        <div class="invalid-feedback">Please provide a valid description</div>
      </div>
      <div class="mb-3">
        <button type="submit" class="btn btn-primary mb-3">Save</button>
        <a href="/campgrounds/<%= camp._id %>" class="btn btn-danger mb-3"
          >Cancel</a
        >
      </div>
    </form>
  </div>
</div>
