
<%- layout('layouts/boilerplate') %>

<div class="row text-white m-auto rounded">
  <div
    class="col px-5 mt-2 container flex-column align-items-center justify-content-center mb-3"
  >
    <div class="card text-bg-light shadow p-3">
      <div class="card-title">
        <h3>Edit Campground</h3>
      </div>
      <div class="card-body">
        <form
      action="/campgrounds/<%= camp._id %>?_method=PUT"
      method="post"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          class="form-control"
          id="title"
          name="campground[title]"
          placeholder="Name of Campground"
          value="<%= camp.title %>"
          required
        />
        <div class="invalid-feedback">Please provide a valid name</div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          class="form-control"
          id="location"
          name="campground[location]"
          placeholder="Location of Campground"
          value="<%= camp.location %>"
          required
        />
        <div class="invalid-feedback">Please provide a valid location</div>
      </div>
      <div class="mb-3">
        <label for="img" class="form-label">Add images</label>
        <input class="form-control" type="file" id="img" name="campground[img]" multiple>
        <div class="invalid-feedback">Atleast 1 image is required</div>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input
            type="text"
            id="price"
            class="form-control"
            aria-label="Amount (to the nearest dollar)"
            placeholder="Price of Campground"
            name="campground[price]"
            value="<%= camp.price %>"
            required
          />
          <span class="input-group-text">.00</span>
          <div class="invalid-feedback">Please provide a valid price</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          class="form-control"
          id="description"
          name="campground[description]"
          rows="3"
          required
        >
          <%= camp.description %>
      </textarea
        >
        <div class="invalid-feedback">Please provide a valid description</div>
      </div>
      <div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/campgrounds/<%= camp._id %>" class="btn btn-danger"
          >Cancel</a
        >
      </div>
      </div>
    </div>
  </div>

  <div
    class="col px-5 mt-2 container flex-column align-items-center justify-content-center mb-3"
  >
    <div class="card text-bg-light shadow p-3">
      <div class="card-title">
        <h3>Images</h3>
        <h5>(Select the images you want to delete)</h5>
      </div>
      <div class="card-body">
        <div class="list-group overflow-auto px-2" style="max-height: 30rem">
          <% camp.img.forEach((img, i) => { %>
          <div class="d-flex flex-column align-items-center">
            <label for="image-<%= i %>">
              <img
                src="<%= img.thumbnail %>"
                class="img-thumbnail rounded mb-2"
                alt=""
              />
            </label>
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                value="<%= img.filename %>"
                id="image-<%= i %>"
                name="deleteImages[]"
              />
              <label class="form-check-label" for="image-<%= i %>">
                <%= img.filename %>
              </label>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </form>
    </div>
  </div>
</div>
